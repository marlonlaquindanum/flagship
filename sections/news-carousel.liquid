{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>

<div class="news-carousel">
  <div class="swiper-container page-width">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div
          class="swiper-slide news-slide"
          data-start="{{ block.settings.start_datetime }}"
          data-end="{{ block.settings.end_datetime }}"
        >
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.news-carousel.name",
  "settings": [],
  "blocks": [
    {
      "type": "news_item",
      "name": "t:sections.news-carousel.blocks.item.name",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "t:sections.news-carousel.blocks.item.settings.title.label"
        },
        {
          "id": "description",
          "type": "textarea",
          "label": "t:sections.news-carousel.blocks.item.settings.description.label"
        },
        {
          "id": "start_datetime",
          "type": "text",
          "label": "t:sections.news-carousel.blocks.item.settings.start_datetime.label"
        },
        {
          "id": "end_datetime",
          "type": "text",
          "label": "t:sections.news-carousel.blocks.item.settings.end_datetime.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.news-carousel.presets.name"
    }
  ]
}
{% endschema %}
